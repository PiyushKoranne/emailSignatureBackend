<div class="vh-100 row align-items-center  justify-content-center" style="background-color: #0f172a;background-image:url('/endless-constellation.svg');position:fixed;top:0;left:0;right:0;bottom:0;z-index:2000;">
	<div style="background-color: #020617;"  class="text-white col-lg-3 shadow-sm p-4">
		<form method="POST" action="/send-password-link">
			<div class="row justify-content-center align-items-center">
				<div class="mb-3 border-bottom p-2 col-auto">
					<img <% if(logoUrl) {%>src="<%= logoUrl %>"<% } %> alt="Bootstrap" >
				</div>
			</div>
			<% if(typeof message != 'undefined') { 
				message.forEach(item => {
				if(item.type == 'success'){
			%>
				<div class="alert alert-info alert-dismissible fade show" role="alert">
  					<strong>Hold Up!</strong> <%= item.value %>
  					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% } else if(item.type == 'failure') { %>
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					<strong>Warning!</strong> <%= item.value %>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% }})} %>

			<div class="mb-3">
			  <label for="exampleInputEmail1" class="form-label text-body-tertiary fw-bold" style="font-size:12px; text-transform:uppercase;" >Enter Email</label>
			  <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
			  <div id="emailHelp" class="form-text">Avoid using capital letters</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-lg-12">
				<button type="submit" class="btn btn-primary w-100">Send Password Change Link</button>
				</div>
				<div class="col-lg-12 mt-3">
				<a href="/">
					<button type="button" class="btn bg-body-secondary w-100">Cancel</button>
				</a>
				</div>

			</div>
		  </form>
	</div>
</div>
