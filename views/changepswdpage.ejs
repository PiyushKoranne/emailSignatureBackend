<div class="row align-items-center  justify-content-center"
	style="background-image:url('/endless-constellation.svg');position:fixed;top:0;left:0;right:0;bottom:0;z-index:2000;">
	<div style="background-color: #020617;" class="bg-body-tertiary col-lg-3 col-md-4 h-lg-auto h-md-auto h-sm-100 shadow-sm p-4">
		<form method="POST" action="/change-password">
			<div class="row justify-content-center align-items-center">
				<div class="mb-3 border-bottom p-2 col-auto">
					<img <% if(logoUrl) {%>src="<%= logoUrl %>"<% } %> alt="Bootstrap" >
				</div>
			</div>
			<% if(typeof message !='undefined' ) { message.forEach(item=> {
				if(item.type == 'success'){
				%>
				<div class="alert alert-info alert-dismissible fade show" role="alert">
					<strong>Hold Up!</strong>
					<%= item.value %>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
				<% } else if(item.type=='failure' ) { %>
					<div class="alert alert-warning alert-dismissible fade show" role="alert">
						<strong>Warning!</strong>
						<%= item.value %>
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
					<% }})} %>
						<div class="mb-3">
							<input type="hidden" name="token" <% if(token) { %> value="<%= token %>" <% } %>
									class="form-control" id="exampleInputPassword1">
						</div>
						<div class="mb-3">
							<input type="hidden" name="email" <% if(email) { %> value="<%= email %>" <% } %>
									class="form-control" id="exampleInputPassword1">
						</div>

						<div class="mb-3">
							<label for="exampleInputPassword1" class="form-label text-body-tertiary fw-bold"
								style="font-size:12px; text-transform:uppercase;">New Password</label>
							<input name="password" type="password" class="form-control" id="exampleInputPassword1">
						</div>
						<div class="mb-3">
							<label for="exampleInputPassword1" class="form-label text-body-tertiary fw-bold"
								style="font-size:12px; text-transform:uppercase;">Confirm Password</label>
							<input name="confirm_password" type="password" class="form-control"
								id="exampleInputPassword1">
						</div>
						<div class="row justify-content-center">
							<div class="col-lg-12">
								<button id="pswd-submit-btn" type="submit" class="btn btn-primary w-100">Confirm</button>
							</div>
						</div>
		</form>
		<script>
			function pswdcheck() {
				const pswd1 = document.getElementById('new-password').innerHTML;
				const pswd2 = document.getElementById('confirm-password').innerHTML;
				if (pswd1 !== pswd2) {
					document.getElementById('response-message').innerHTML = "Passwords dont Match!"
				} else {
					document.getElementById('response-message').innerHTML = ""
				}
			}
		</script>
	</div>
</div>